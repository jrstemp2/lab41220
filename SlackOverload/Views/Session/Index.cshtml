
@{
    ViewData["Title"] = "Index";
}

<h1>Please log in:</h1>
@if (TempData["ErrorMsg"] != null)
{
    <p>@TempData["ErrorMsg"]</p>
}
<form asp-action="Login" asp-controller="Session" method="post">
    <p>Username: <input name="username" type="text" /></p>
    
    <p><input type="submit" value="Log In" /></p>
</form>

